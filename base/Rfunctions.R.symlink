# Returns a list with all combinations of
combn.all <- function(x, ...) {
  # x: a vector (numeric, character, ...)
  ret <- list()
  for (i in 1:length(x)) {
    c <- combn(x, i, ...)
    for (j in 1:dim(c)[2]) {
      ret[[length(ret)+1]] <- c[,j]
    }
  }
  return(ret)
}
