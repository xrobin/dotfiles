#!/bin/bash

DIR="$1"
if [ "$DIR" == "" ]
then
	DIR=.
fi

# This script finds the Icon\r files created by Google Drive (and maybe Dropbox?) on mac at least
>&2 echo Executes the following: 
>&2 echo find \"$DIR\" -name \$\'Icon\\r\'
find "$DIR" -name $'Icon\r'
